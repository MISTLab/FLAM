
function init_available_storage(){
    storage = STORAGE_CAPACITY
}

function update_available_storage(size){
    updated_storage = storage + size

    if (updated_storage > 0 and updated_storage < STORAGE_CAPACITY){
        storage = updated_storage
    }
    else if (updated_storage > STORAGE_CAPACITY){
        storage = STORAGE_CAPACITY
    }
    else {
        storage = 0
    }
}

function get_available_storage() {
    return storage
}
