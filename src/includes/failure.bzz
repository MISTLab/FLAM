
failed = 0

function failure() {
  rand = math.rng.uniform(0.2, 1.0)
  intensity = get_radiation_intensity()

  if (rand < intensity) {  
    failed = 1 
    set_wheels(0.0, 0.0)
    set_leds(255, 0, 0)
    
    return 1
  }
  return 0
}

function is_failed(){
    if (not failed){
        return failure()
    }

    return failed
}